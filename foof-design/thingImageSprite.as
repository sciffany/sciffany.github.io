package{	import flash.events.*;	import flash.geom.*;	import flash.display.*;	import flash.events.MouseEvent;	public class thingImageSprite extends Sprite{		public var rootClip:MovieClip;		public var ts:int;		public var thingsNo:int;		public var thingNo:int;				public function thingImageSprite(rootClip:MovieClip, thingsNo:int, thingNo:int):void{			this.rootClip = rootClip;			this.thingNo = thingNo;			this.thingsNo = thingsNo;			this.ts = rootClip.ts;			this.addEventListener(Event.ADDED, startDragging);					}				function startDragging(e:Event)		{			this.x = stage.mouseX-this.ts/4-rootClip.mapImagesSprite.x;			this.y = stage.mouseY-this.ts/4-rootClip.mapImagesSprite.y;			this.startDrag();			this.addEventListener(MouseEvent.CLICK, stopDragging);		}		function stopDragging(e:Event)		{			this.stopDrag();									var smallTile:int = ts/2;			var coorX:uint=(uint)((this.x+smallTile/2)/smallTile);			var coorY:uint = (uint)((this.y+smallTile/2)/smallTile);			rootClip.mapImagesArray[coorY][coorX].push([thingsNo,thingNo, 0]);			this.x = coorX*smallTile;			this.y = coorY*smallTile;		}			}	}